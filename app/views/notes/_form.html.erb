<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class = "edit-form">
  <div class="edit-name-form">
    <!-- <%= f.label :name %><br> -->
    <%= f.text_field :name, class: "edit-note-title" %>
  </div>
  <div class="edit-text-form">
    <!-- <%= f.label :contents %><br> -->
    <%= f.text_area :contents, class: "edit-note-text", size: "60x20" %>
    <div id="result"></div>
    <%= javascript_include_tag 'application', "data-turbolinks-track" => true %>
  </div>  

  <div class="link-button">
    <%= f.submit  %>
    <div class="link-to-note-btn">
      <%= link_to 'Back', notes_path, class:"back-btn" %>
    </div>
  </div>

</div>
<% end %>
